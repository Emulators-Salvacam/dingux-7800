ATARI_VERSION=1.1.0

TARGET = wiz7800.gpe
SDL_CONFIG = $(WIZDEV)/bin/sdl-config
OBJS = gp2x_psp.o \
  cpuwiz.o  \
  psp_main.o psp_kbd.o psp_joy.o psp_sdl.o psp_font.o \
  psp_fmgr.o psp_menu.o  psp_menu_kbd.o psp_menu_set.o \
  psp_menu_joy.o \
  psp_menu_help.o psp_sound.o \
  Sound.o \
  global.o \
  psp_menu_cheat.o \
  psp_menu_list.o \
  psp_editor.o \
  psp_danzeff.o \
  psp_atari.o \
  Bios.o \
  Database.o \
  Common.o \
  Cartridge.o \
  Hash.o \
  Logger.o \
  Maria.o \
  Memory.o \
  Palette.o \
  Pokey.o \
  ProSystem.o \
  Region.o \
  Riot.o \
  Sally.o \
  Tia.o \
  miniunz.o \
  unzip.o \
  zip.o \
  ioapi.o \
  Archive.o


CC=openwiz-gcc
CXX=openwiz-g++
STRIP=openwiz-strip

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

MORE_CFLAGS = -I. -I$(WIZDEV)/include \
-DNOCRYPT -DNO_STDIO_REDIRECT \
-DWIZ_MODE -DATARI_VERSION=\"$(ATARI_VERSION)\" 

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -O2 -Wall -fsigned-char  \
-funroll-loops -ffast-math -fomit-frame-pointer -fno-strength-reduce -finline-functions

# -ffast-math -fomit-frame-pointer
#
LIBS +=  -L$(WIZDEV)/lib -lSDL_image -lSDL \
$(WIZDEV)/lib/libpng.a \
$(WIZDEV)/lib/libiconv.a \
$(WIZDEV)/sys-root/lib/libstdc++.a \
-lz -lm -lpthread

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

.cpp.o:
	$(CXX) $(CFLAGS) -c $< -o $@

$(TARGET): $(OBJS)
	$(CXX) $(CFLAGS) $(OBJS) $(LIBS) -o $(TARGET) && $(STRIP) $(TARGET)

install: $(TARGET)
	cp $< /media/usbdisk/game/wiz7800/

clean:
	rm -f $(OBJS) $(TARGET)

ctags: 
	ctags *[ch] emucore/*[chp] common/*[chp]
